{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
 RESTRequest1.Params[0].Value := memo1.Lines.Text;

 //'{"requests": [{"features": [{"maxResults": 5,"type": "LABEL_DETECTION"}],"image": {'+
 //'"source": {"imageUri": "%s"}}}]}', [Edit1.text]

 RESTResponse1.RootElement := 'responses.labelAnnotations[0].description';
 RESTRequest1.Execute;
 memo2.Lines := RESTResponse1.Headers;
 //memo3.Lines.text := RESTResponse1.
 memo3.Lines.text := RESTResponse1.JSONValue.Value;
end;

end.
